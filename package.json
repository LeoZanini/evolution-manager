{
  "name": "evolution-manager-library",
  "version": "2.1.3",
  "description": "Modern React component library for Evolution API with theming support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README-NPM.md"
  ],
  "readme": "README-NPM.md",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "dev:standalone": "vite --config vite.standalone.config.ts",
    "build": "tsc && vite build",
    "build:lib": "vite build --mode lib",
    "build:demo": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:standalone": "echo 'ðŸ§ª Execute: npm run dev:standalone' && echo 'Abre http://localhost:5173 para testar o ambiente standalone'",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "version:patch": "npm version patch && npm run build:lib",
    "version:minor": "npm version minor && npm run build:lib",
    "version:major": "npm version major && npm run build:lib",
    "version:publish": "npm run build:lib && npm publish",
    "pre-release": "npm run type-check && npm run lint && npm run test && npm run build:lib",
    "release:patch": "npm run pre-release && npm version patch && npm publish",
    "release:minor": "npm run pre-release && npm version minor && npm publish",
    "release:major": "npm run pre-release && npm version major && npm publish",
    "release:safe": "npm run pre-release && echo 'Ready to release! Run: npm version [patch|minor|major] && npm publish'"
  },
  "keywords": [
    "evolution-api",
    "whatsapp",
    "react",
    "components",
    "vite",
    "typescript",
    "theming"
  ],
  "author": "Leo Zanini",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.3",
    "styled-components": "^6.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@storybook/test": "^7.6.7",
    "@tailwindcss/forms": "^0.5.10",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "storybook": "^9.1.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^7.1.8",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeoZanini/evolution-manager.git"
  }
}
