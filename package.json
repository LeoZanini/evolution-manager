{
  "name": "evolution-manager",
  "version": "1.0.0",
  "description": "Wrapper for Evolution API to manage WhatsApp instances",
  "main": "index.js",
  "module": "src/evolution-manager.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/evolution-manager.mjs",
      "require": "./index.js",
      "types": "./types/index.d.ts"
    },
    "./hooks": {
      "import": "./src/hooks/useEvolutionManager.js",
      "types": "./types/index.d.ts"
    },
    "./nextjs": {
      "import": "./src/nextjs/NextEvolutionAPI.js",
      "types": "./types/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest --watchman=false",
    "build": "echo 'No build step required'",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "evolution-api",
    "whatsapp",
    "api-wrapper"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "jest": "^30.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeoZanini/evolution-manager"
  },
  "jest": {
    "watchman": false,
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.js",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  },
  "files": [
    "src/",
    "index.js",
    "types/",
    "README.md"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "next": ">=12.0.0"
  }
}
